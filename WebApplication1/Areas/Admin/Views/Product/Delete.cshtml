@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="row mb-3 p-1">
            <label asp-for="Title" class="p-1"></label>
            <input asp-for="Title" disabled type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Description" class="p-1"></label>
            <input asp-for="Description" disabled type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="ISBN" class="p-1"></label>
            <input asp-for="ISBN" disabled type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Author" class="p-1"></label>
            <input asp-for="Author" disabled type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="ListPrice" class="p-1"></label>
            <input asp-for="ListPrice" disabled type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Price" class="p-1"></label>
            <input asp-for="Price" disabled type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Price50" class="p-1"></label>
            <input asp-for="Price50" disabled type="text" class="form-control" />
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Price100" class="p-1"></label>
            <input asp-for="Price100" disabled type="text" class="form-control" />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3 ">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>

    </div>
</form>
